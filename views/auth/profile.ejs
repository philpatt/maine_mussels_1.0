<div class="row">
<!-- Add Clinic Form -->
  <form class='col-sm-3 form' method="post" action="#">
    <h3>Add A Clinic Type</h3>
    <p>A "Clinic" is an individual skill instructional by a coach or outside professional</p>
  
    <hr>
    <div class="form-group">
      <label>Clinic Title:</label>
      <input type="text" name="clinic_title" class="form-control" placeholder="add new clinic">
    </div>
    <div class="form-group">
      <label>Cost of Clinic: $</label>
      <input type="" name="cost" class="form-control" placeholder="0.00">
    </div>
    <div class="form-group">
      <label>Start Time:</label>
      <input type="time" name="start_time" class="form-control" placeholder="add new clinic">
    </div>
    <div class="form-group">
      <label>End Time:</label>
      <input type="time" name="end_time" class="form-control" placeholder="add new clinic">
    </div>
    <div class="form-group">
      <label>Start Date:</label>
      <input type="date" name="start" class="form-control" placeholder="add new clinic">
    </div>
    <div class="form-group">
      <label>End Date:</label>
      <input type="date" name="end" class="form-control" placeholder="add new clinic">
    </div>
    <div class="form-group">
      <label>Details About Clinic:</label>
        <textarea name="clinic_detail" class="form-control" placeholder="Clinic details..."></textarea>
    </div>
    <input type="submit" value="Add Clinic Type" class="btn btn-success">
  </form>

<!-- Add Event Form -->
  <form class='col-sm-3 form' method="post" action="">
    <h3>Add Event Type</h3>
    <p>An "Event" is a practice, game, or tournament</p>
    <hr>
    <div class="form-group">
      <label>Event</label>
      <input type="text" name="cost" class="form-control" placeholder="add new clinic">
    </div>
    <input type="submit" value="Add Event Type" class="btn btn-success">
  </form>

<!-- Add Program Form -->
  <form class='col-sm-3 form' method="post" action="">
    <h3>Add Program Type</h3>
    <p>Current programs are Summer Travel, Summer League, and Summer Pick-Up   </p>
    <hr>
    <div class="form-group">
      <label>Event</label>
      <input type="text" name="cost" class="form-control" placeholder="add new clinic">
    </div>
    <input type="submit" value="Add Program Type" class="btn btn-success">
  </form>

 </div><!-- End Program.js-->

