 <div class="row">
  <!-- Add Scheduled Event Form-->
  <!-- need to populate database so you can start select dropdown -->
  <form class='col-sm-offset-1 col-sm-10 schedule-form form' method="post" action="">
    <h3>Schedule Activity</h3>
    <p>Schedule an Event, Program, or Clinic</p>
    <hr>
    <div class="form-group">
      <label>Event</label>
      <input type="text" name="cost" class="form-control" placeholder="add new clinic">
    </div>
    <input type="submit" value="Add to Schedule" class="btn btn-success">
  </form>
